{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile C Program",
			"type": "shell",
			"command": "gcc",
			"args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"],
			"detail": "This task compiles a C program with debugging symbols."
		}
	]
}
